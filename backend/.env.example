# App
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="mysql://craftcard:craftcard_pass@localhost:3306/craftcard"

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Mercado Pago
MP_ACCESS_TOKEN=APP_USR-your-access-token
MP_WEBHOOK_SECRET=your-webhook-secret
MP_PUBLIC_KEY=APP_USR-your-public-key

# Cloudflare R2 (file storage)
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=craftcard-uploads
R2_PUBLIC_URL=https://pub-xxx.r2.dev

# Backend URL (for webhook notification_url)
BACKEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Mail (optional - email notifications disabled if not set)
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=465
MAIL_USER=noreply@yourdomain.com
MAIL_PASS=your-email-password
MAIL_FROM=noreply@yourdomain.com

# Push Notifications (generate with: npx web-push generate-vapid-keys)
VAPID_PUBLIC_KEY=your-vapid-public-key
VAPID_PRIVATE_KEY=your-vapid-private-key
VAPID_SUBJECT=mailto:contato@yourdomain.com