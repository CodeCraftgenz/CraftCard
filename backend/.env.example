# App
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="mysql://craftcard:craftcard_pass@localhost:3306/craftcard"

# JWT
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-here
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-32-chars
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Mercado Pago
MP_ACCESS_TOKEN=APP_USR-your-access-token
MP_WEBHOOK_SECRET=your-webhook-secret
MP_PUBLIC_KEY=APP_USR-your-public-key

# FTP (Hostinger uploads)
FTP_HOST=ftp.yourdomain.com
FTP_USER=your-ftp-user
FTP_PASSWORD=your-ftp-password
FTP_BASE_PATH=/public_html/uploads
UPLOADS_PUBLIC_URL=https://yourdomain.com/uploads

# Backend URL (for webhook notification_url)
BACKEND_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:5173
FRONTEND_URL=http://localhost:5173

# Mail (optional - email notifications disabled if not set)
MAIL_HOST=smtp.yourdomain.com
MAIL_PORT=465
MAIL_USER=noreply@yourdomain.com
MAIL_PASS=your-email-password
MAIL_FROM=noreply@yourdomain.com
