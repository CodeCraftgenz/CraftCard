generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  googleId  String   @unique @map("google_id")
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  profiles      Profile[]
  payments      Payment[]
  refreshTokens RefreshToken[]

  @@map("users")
}

model Profile {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  displayName String   @map("display_name")
  label       String   @default("Principal") @db.VarChar(50)
  isPrimary   Boolean  @default(true) @map("is_primary")
  bio         String?  @db.Text
  photoUrl    String?  @map("photo_url")
  photoData   String?  @map("photo_data") @db.MediumText
  resumeUrl   String?  @map("resume_url")
  resumeType  String?  @map("resume_type")
  buttonColor String   @default("#00E4F2") @map("button_color")
  slug        String   @unique
  isPublished Boolean  @default(false) @map("is_published")
  viewCount   Int      @default(0) @map("view_count")
  cardTheme   String   @default("default") @map("card_theme")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  coverPhotoUrl  String?  @map("cover_photo_url")
  coverPhotoData String?  @map("cover_photo_data") @db.MediumText

  photoPositionY      Int      @default(50) @map("photo_position_y")
  coverPositionY      Int      @default(50) @map("cover_position_y")

  availabilityStatus  String?  @map("availability_status")
  availabilityMessage String?  @map("availability_message")

  videoUrl            String?  @map("video_url")
  leadCaptureEnabled  Boolean  @default(false) @map("lead_capture_enabled")

  user            User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  socialLinks     SocialLink[]
  profileViews    ProfileView[]
  contactMessages ContactMessage[]
  testimonials    Testimonial[]
  galleryImages   GalleryImage[]
  availableSlots  AvailableSlot[]
  bookings        Booking[]

  @@index([userId])
  @@map("profiles")
}

model SocialLink {
  id        String    @id @default(uuid())
  profileId String    @map("profile_id")
  platform  String
  label     String
  url       String
  order     Int       @default(0)
  startsAt  DateTime? @map("starts_at")
  endsAt    DateTime? @map("ends_at")
  createdAt DateTime  @default(now()) @map("created_at")

  profile    Profile     @relation(fields: [profileId], references: [id], onDelete: Cascade)
  linkClicks LinkClick[]

  @@index([profileId])
  @@map("social_links")
}

model ProfileView {
  id        String   @id @default(uuid())
  profileId String   @map("profile_id")
  date      DateTime @db.Date
  count     Int      @default(1)
  createdAt DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, date])
  @@index([profileId])
  @@map("profile_views")
}

model LinkClick {
  id           String     @id @default(uuid())
  socialLinkId String     @map("social_link_id")
  date         DateTime   @db.Date
  count        Int        @default(1)
  createdAt    DateTime   @default(now()) @map("created_at")

  socialLink SocialLink @relation(fields: [socialLinkId], references: [id], onDelete: Cascade)

  @@unique([socialLinkId, date])
  @@index([socialLinkId])
  @@map("link_clicks")
}

model Payment {
  id             String    @id @default(uuid())
  userId         String    @map("user_id")
  preferenceId   String?   @map("preference_id")
  mpPaymentId    String?   @unique @map("mp_payment_id")
  amount         Decimal   @db.Decimal(10, 2)
  currency       String    @default("BRL")
  status         String    @default("pending")
  payerEmail     String?   @map("payer_email")
  mpResponseJson String?   @map("mp_response_json") @db.Text
  paidAt         DateTime? @map("paid_at")
  expiresAt      DateTime? @map("expires_at")
  createdAt      DateTime  @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, status])
  @@index([payerEmail])
  @@map("payments")
}

model RefreshToken {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  tokenHash String    @unique @map("token_hash")
  expiresAt DateTime  @map("expires_at")
  createdAt DateTime  @default(now()) @map("created_at")
  revokedAt DateTime? @map("revoked_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@map("refresh_tokens")
}

model ContactMessage {
  id          String   @id @default(uuid())
  profileId   String   @map("profile_id")
  senderName  String   @map("sender_name")
  senderEmail String?  @map("sender_email")
  message     String   @db.Text
  isRead      Boolean  @default(false) @map("is_read")
  createdAt   DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([profileId, isRead])
  @@map("contact_messages")
}

model GalleryImage {
  id        String   @id @default(uuid())
  profileId String   @map("profile_id")
  imageData String   @map("image_data") @db.MediumText
  caption   String?  @db.VarChar(200)
  order     Int      @default(0)
  createdAt DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@map("gallery_images")
}

model Testimonial {
  id         String   @id @default(uuid())
  profileId  String   @map("profile_id")
  authorName String   @map("author_name")
  authorRole String?  @map("author_role")
  text       String   @db.Text
  isApproved Boolean  @default(false) @map("is_approved")
  createdAt  DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId])
  @@index([profileId, isApproved])
  @@map("testimonials")
}

model AvailableSlot {
  id        String @id @default(uuid())
  profileId String @map("profile_id")
  dayOfWeek Int    @map("day_of_week")
  startTime String @map("start_time") @db.VarChar(5)
  endTime   String @map("end_time") @db.VarChar(5)
  duration  Int    @default(30)

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@unique([profileId, dayOfWeek])
  @@map("available_slots")
}

model Booking {
  id        String   @id @default(uuid())
  profileId String   @map("profile_id")
  name      String
  email     String
  phone     String?
  date      DateTime @db.Date
  time      String   @db.VarChar(5)
  status    String   @default("pending")
  notes     String?  @db.Text
  createdAt DateTime @default(now()) @map("created_at")

  profile Profile @relation(fields: [profileId], references: [id], onDelete: Cascade)

  @@index([profileId, date])
  @@map("bookings")
}
